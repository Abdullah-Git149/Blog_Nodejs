<div class="form-container">
    <form action="" method="POST">
        <div class="group">
            <h3>User Login</h3>
        </div>

        <div class="group">
            <label for="email">Email</label>
            <input type="email" name="email" class="control" id="email" placeholder="Enter email">
        </div>
        <div class="group">
            <label for="password">Password</label>
            <input type="password" name="password" class="control" id="password" placeholder="Enter password">
        </div>
        <div class="group">

            <input type="submit" class="btn btn-sweet" value="Login">
        </div>


    </form>


</div>