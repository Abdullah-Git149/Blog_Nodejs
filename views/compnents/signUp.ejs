<div class="form-container">

    <% if(errors.lenght>0) { %>


        <% }else{ %>
            <div class="errors">
                <% errors.forEach(error=> {%>
                    <span class="error">
                        <%= error.msg%>
                    </span>

                    <% });%>
            </div>
            <%}%>
                <form action="/register" method="POST">
                    <div class="group">
                        <h3>Create New Account</h3>
                    </div>
                    <div class="group">
                        <label for="name">Name</label>
                        <input type="text" name="name" id="name" class="control" placeholder="Enter Name" value=<%if(inputs) {%> <%= inputs.name%> <%}%>>

                    </div>
                    <div class="group">
                        <label for="email">Email</label>
                        <input type="email" name="email" class="control" id="email" placeholder="Enter email" value= <%if(inputs) {%> <%= inputs.email%> <%}%> >
                    </div>
                    <div class="group">
                        <label for="password">Password</label>
                        <input type="password" name="password" class="control" id="password"
                            placeholder="Enter password" value=<%if(inputs) {%> <%= inputs.password%> <%}%>>
                    </div>
                    <div class="group">

                        <input type="submit" class="btn btn-sweet" value="Register">
                    </div>


                </form>


</div>